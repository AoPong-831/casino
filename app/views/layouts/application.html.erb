  </head>

  <body>
    <header>
      <h1 class="title">カジノ</h1>
      <nav class="nav">
          <ul class="menu-group">
              <% if session[:login_uid] == "takaaki"%>
                    <li class="menu-item"><%= link_to "受信BOX", "/receptions/index" %></li>
              <% end %>
              <li class="menu-item"><%= link_to "トップページ", "/" %></li>
              <% if session[:login_uid] %>
                <li class="menu-item"><%= link_to "ログアウト",top_logout_path %></li>
              <% else %> 
                <li class="menu-item"><%= link_to "sign in/sign up", "/top/login_page" %></li>
              <% end %>
          </ul>
      </nav>
    </header>
    <br>
    <br>
    <br>
    <br>
    <br>
    
    <%= yield %>
  </body>
</html>